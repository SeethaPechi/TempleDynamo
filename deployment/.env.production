# TMS Production Environment Configuration
# Copy this file to .env and update with your actual values

# Application Settings
NODE_ENV=production
PORT=8080

# Database Configuration (Local PostgreSQL)
DATABASE_URL=postgresql://temple_app:TMS2024SecurePass!@localhost:5432/temple_management
PGHOST=localhost
PGPORT=5432
PGDATABASE=temple_management
PGUSER=temple_app
PGPASSWORD=TMS2024SecurePass!

# Security Settings
SESSION_SECRET=TMS_Super_Secret_Key_2024_Change_In_Production
BCRYPT_ROUNDS=12

# Application URLs
BASE_URL=http://localhost:8080
API_BASE_URL=http://localhost:8080/api

# File Upload Settings
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/tms.log

# Performance Settings
CONNECTION_POOL_MAX=20
CONNECTION_TIMEOUT=2000
IDLE_TIMEOUT=30000